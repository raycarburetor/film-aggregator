# Required (free): https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_key_here
DEFAULT_REGION=GB

# Optional (patron): https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=

# Feature flags
# Hide BFI from API responses and frontend filters
HIDE_BFI=true
NEXT_PUBLIC_HIDE_BFI=true

# Letterboxd enrichment
# OFF by default. Enable to fetch average ratings from Letterboxd.
# Default method is HTTP (no Playwright). Set LETTERBOXD_USE_PLAYWRIGHT=true to opt in to Playwright.
LETTERBOXD_ENABLE=false
LETTERBOXD_USE_PLAYWRIGHT=false
LETTERBOXD_STEALTH=false

# Postgres (optional; if set, API uses DB instead of data/listings.json)
# e.g. postgres://user:password@host:5432/dbname
DATABASE_URL=
# Optional if your table is not named "listings"
LISTINGS_TABLE=listings
